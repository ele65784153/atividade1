// Definição dos pinos
const int ldrPin = A0;    // Pino analógico ligado ao divisor com LDR
const int relePin = 7;    // Pino digital que controla o relé

// Valor limite da luminosidade
int limite = 500; // Ajuste conforme necessário (0-1023)

void setup() {
  pinMode(relePin, OUTPUT);     // Configura pino do relé como saída
  digitalWrite(relePin, LOW);   // Inicialmente relé desligado
  Serial.begin(9600);           // Para monitorar valores no Monitor Serial
}

void loop() {
  int valorLdr = analogRead(ldrPin); // Lê o valor do LDR (0 a 1023)
  
  Serial.print("Luminosidade: ");
  Serial.println(valorLdr);
  
  if (valorLdr < limite) {
    // Está escuro → acende a lâmpada (liga relé)
    digitalWrite(relePin, HIGH);
  } else {
    // Está claro → apaga a lâmpada (desliga relé)
    digitalWrite(relePin, LOW);
  }

  delay(500); // Pequena pausa para estabilidade
}
